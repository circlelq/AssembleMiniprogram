<view class="title">{{organization.name}}</view>
<view style="display:flex; justify-content:center; align-items:center;">
  <image mode="widthFix" src="https://6369-circle-test-zdk23-1259206269.tcb.qcloud.la/%E4%BC%9A%E5%BE%BD/{{organization.name}}.png" style="width: 80%;">
  </image>
</view>

<view class="itemname1">
  <view wx:if="{{organization.officialAccount['miniprogram']}}" bindtap="naviToMini" style='flex-shrink:0; box-sizing:border-box; width:3rem; margin-right:2rem;'>
    <image style="width:3rem;height:3rem;" src="/pages/images/mini.png"></image>
    <view style="text-align: center;  color:#353535;"> \n 小程序 </view>
  </view>
  <view wx:if="{{organization.officialAccount['wechat']}}" bindtap="copyWechat" style='flex-shrink:0; box-sizing:border-box; width:3rem; margin-right:2rem;'>
    <image style="width:3rem;height:3rem;" src="/pages/images/gongzhong.png"></image>
    <view style="text-align: center;  color:#353535;"> \n 公众号 </view>
  </view>
  <view wx:if="{{organization.officialAccount['bili']}}" bindtap="copybili" style='flex-shrink:0; box-sizing:border-box; width:3rem; margin-right:2rem;'>
    <image style="width:3rem;height:3rem;" src="/pages/images/bili.png"></image>
    <view style="text-align: center;  color:#353535;"> \n B 站 </view>
  </view>
  <view wx:if="{{organization.officialAccount['weibo']}}" bindtap="copyWeibo" style='flex-shrink:0; box-sizing:border-box; width:3rem; margin-right:2rem;'>
    <image style="width:3rem;height:3rem;" src="/pages/images/weibo.png"></image>
    <view style="text-align: center;  color:#353535;"> \n 微博 </view>
  </view>
</view>

<block wx:for="{{organization.mainContent}}">
  <view class="{{item[0]}}">
    {{item[1]}}
  </view>
</block>

<text> \n </text>

<view style="display:flex; justify-content:center; align-items:center;">
  <map id="map" longitude="{{organization.miniMap.longitude}}" latitude="{{organization.miniMap.latitude}}" scale="{{organization.miniMap.scale}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" bindregionchange="regionchange" show-location style="width: 90%; height: 300px;"></map>
</view>


<text> \n </text>