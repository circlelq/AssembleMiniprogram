<!--index.wxml-->

<view class="circle">
  <image class='avator ' src="/pages/images/circle.png" mode='aspectFill'></image>
  <input class='search' placeholder="请输入组织名称" bindconfirm="bindconfirmT" placeholder-class="placeholder" />
</view>

<view class="container">
  <view class="divLineLong"></view>
</view>

<block wx:for="{{organization}}" wx:key="_id">
  <view bindtap="clickOrganization" data-organization_id='{{item._id}}'>
    <view class="catitem">
      <image class='avator ' src="https://gitee.com/circlelq/AssembleMiniprogram/raw/master/会徽/{{item.name}}.png" mode='aspectFill'></image>
      <view class="cat-name">{{item.name}}</view>
    </view>
    <view class="divLine"></view>
  </view>
</block>